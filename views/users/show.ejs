<h1>User Data for <%= user.fullName %></h1>
<table class="table">
    <tr>
        <th>UserID</th>
        <td><%= user.userid %></td>
    </tr>
    <tr>
        <th>Name</th>
        <td><%= user.fullName %></td>
    </tr>
    <tr>
        <th>Email</th>
        <td><%= user.email %></td>
    </tr>
    <tr>
        <th>Password</th>
        <td><%= user.password %></td>
    </tr>
    <tr>
        <th>API Token</th>
        <td><%= user.apiToken %></td>
    </tr>
</table>
<div>
    <a href="/users/userList">View all users</a>
</div>
<div>
    <a href="<%=`/users/${user._id}/edit`%>">Edit User Details</a>
</div>
<div>
    <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
        onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
</div>